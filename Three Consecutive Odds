https://leetcode.com/problems/three-consecutive-odds/

class Solution:
    def threeConsecutiveOdds(self, arr):
        window = 0
        for i in range(min(3, len(arr))):
            window += arr[i] % 2
        if window == 3:
            return True
        for i in range(3, len(arr)):
            window += arr[i] % 2
            window -= arr[i - 3] % 2
            if window == 3:
                return True
        return False
solution = Solution()
arr = [1, 2, 3, 5, 7, 8]
print(solution.threeConsecutiveOdds(arr))
